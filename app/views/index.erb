<div class="container">
  <h1>Welcome to Glitter!</h1>
</div>

<%# this stuff should probably be moved to partials. %>
<%# wtf? where'd this body tag come from? %>
<body>
  <h3 class="message"><%= session[:message] %></h3>
  <% if current_user %>

    <div class="container">
      <div class="content">
        <form id="login" action="/" method="post">
          <h3> Log in below: </h3>
          <input type="text" name="username" placeholder="username">
          <br>
          <input type="password" name="password" placeholder="password">
          <br>
          <input type="submit" value="Login">
        </form>
      </div>
    </div>
    <div class="container">
      <h1><a href="/create">Create New Account</a></h1>
    </div>
  <% else %>

    <div class="container">
      <form action='/tweet' method="post">
        <input type="text" maxlength="140" name="tweet" placeholder="tweet">
        <input type="submit" value="Gleet">
      </form>
    </div>

    <% if current_user && current_user.follows.any? %>
      <div class="container" id="feed">
        <h3> Your twitter feed </h3>
          <% current_user.follows_feed.each do |tweet| %>
            <a href="/<%= tweet.user.username%>"><img src='<%= tweet.user.gravatar_url %>' id="gravatar"></a>
            <a href="/<%= tweet.user.username%>"><%= tweet.user.username%>: </a>
            <%= tweet.content%>
            <%= tweet.created_at%>
            <br>
          <% end %>
      </div>
    <% end %>
    <div class="container">
      <a href="/<%= current_user.username %>">Profile</a>
    </div>
  <%end%>
