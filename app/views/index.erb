<div class="container">
  <h1>Welcome to Glitter!</h1>
</div>

<body>
  <h3><%= session[:message] %></h3>
  <%if session[:user_id]==nil %>

<div class="container">
  <div class="content">
    <form id="login" action="/" method="post">
      <h3> Log in below: </h3>
      <input type="text" name="username" placeholder="username">
      <br>
      <input type="password" name="password" placeholder="password">
      <br>
      <input type="submit" value="Login">
    </form>
  </div>
</div>
    <div class="container">
      <h1><a href="/create">Create New Account</a></h1>
    </div>
  <%else%>
  <div class="container">
    <h3> Create a tweet! </h3>
    <form id="createtweet" action="/tweet" method="post">
      <input type="text" name="tweet" placeholder="Enter your tweet here" maxlength="140">
      <input type="submit" value="Submit Tweet">
    </form>
  </div>
  <div class="container"
    <a href="/<%= @user.username %>">Profile</a>
  </div>
  <%end%>